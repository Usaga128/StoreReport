@model StoreReport.Models.Store

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Store</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
          Nombre
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
           Tel
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt>
           Contacto
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ContactName)
        </dd>
        <dt>
           Dirección
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.GeoAddress)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.GeoAddress)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt>
           Estado
        </dt>
        <dd>
            @if (Html.DisplayFor(model => model.Status).Equals("1"))
            {
                <label>Activo</label>
            }
            else if (Html.DisplayFor(model => model.Status).Equals("2"))
            {
                <label>Inactivo</label>
            }
        </dd>
        <dt>
           Franquicia
        </dt>

@model StoreReport.Models.Route

@{
    ViewData["Title"] = "Crear Ruta";
}
<br />
<br />
<br />
<h1>Crear Ruta</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RouteName" class="control-label">Nombre</label>
                <input asp-for="RouteName" class="form-control" />
                <span asp-validation-for="RouteName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Agregar Ruta" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model StoreReport.Models.UserByRoute

@{
    ViewData["Title"] = "Delete";
}
<br />
<br />
<br />
<main>
    <div>
        <div>
           
            <h1>Desea eliminar la ruta del usuario?</h1>
            <div>

               
                <dl class="dl-horizontal">
                    <dt>
                        Correo
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.UserName)
                    </dd>
                    <dt>
                        Ruta
                    </dt>
                    <dd>


                        @{
                            SelectList list = new SelectList(new List<SelectListItem>());
                            list = ViewBag.routelist;
                            foreach (SelectListItem vItem in list)
                            {

                                string vcurrentValue = Model.RouteId;

                                @if (vItem.Value.Equals(vcurrentValue))
                                {
                                    <label>@vItem.Text</label>
                                }
                            }
                        }

                    </dd>
                    <dt>
                        Creado por
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CreatedBy)
                    </dd>
                    <dt>
                        Fecha Creación
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CreatedDate)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="UserByRouteID" />
                    <input type="submit" value="Eliminar" class="btn btn-success" /> |
                    <a asp-action="Index">Retornar a la lista</a>
                </form>
            </div>
        </div>
    </div>
</main>
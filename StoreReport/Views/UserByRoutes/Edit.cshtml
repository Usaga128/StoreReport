@model StoreReport.Models.UserByRoute

@{
    ViewData["Title"] = "Edit";
}

<br />
<br />
<br />
<main>
    <div>
        <div>


            <h4>Editar ruta por usuario</h4>
           
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UserByRouteID" />


                        <div class="form-group">
                            <label class="control-label">Usuario</label>



                            @{
                                SelectList list = new SelectList(new List<SelectListItem>());
                                list = ViewBag.userlist;

                            }

                            @Html.DropDownList("UserName", list);
                          

                        </div>
                        <div class="form-group">
                            <label class="control-label">Identificación de la ruta</label>



                            @{
                                SelectList routelist = new SelectList(new List<SelectListItem>());
                                routelist = ViewBag.routelist;

                            }

                            @Html.DropDownList("RouteID", routelist)
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Guardar cambios" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Retornar a la lista</a>
            </div>

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
        </div>
    </div>
</main>
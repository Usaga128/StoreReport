@model IEnumerable<StoreReport.Models.StoresByRoute>

@{
    ViewData["Title"] = "Supermercados por Ruta";
}
<br />
<br />
<br />
<main>

    <div>

        <div>

            <table class="table">
               
                    <tr>

                        <th>
                            <h1>Consulta de supermercados por ruta</h1>

                            <p>
                                <a asp-action="Create">Crear un nuevo Supermercado por Ruta</a>
                            </p>
                        </th>
                    </tr>
                    <tr>
                        <th>
                            Ruta
                        </th>
                        <th>
                            Supermercado
                        </th>

                        <th>
                            Días de visita
                        </th>
                        <th>

                        </th>
                    </tr>
             
               
                    @foreach (var item in Model)
                    {
                <tr>

                    <td>


                        @{
                            SelectList list2 = new SelectList(new List<SelectListItem>());
                            list2 = ViewBag.routelist;
                            foreach (SelectListItem vItem in list2)
                            {
                                @if (vItem.Value.Equals(item.RouteID.ToString()))
                                {
                                    <label>@vItem.Text</label>
                                }
                            }
                        }

                    </td>
                    <td>


                        @{
                            SelectList list = new SelectList(new List<SelectListItem>());
                            list = ViewBag.storelist;
                            foreach (SelectListItem vItem in list)
                            {
                                @if (vItem.Value.Equals(item.StoreID.ToString()))
                                {
                                    <label>@vItem.Text</label>
                                }
                            }
                        }

                    </td>



                  
                    <td>
                        @Html.DisplayFor(modelItem => item.DaysOfWeek)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StoresByRouteID">Editar</a> |
                        <a asp-action="Delete" asp-route-id="@item.StoresByRouteID">Eliminar</a>
                    </td>
                </tr>
                    }
                  
            </table>
        </div>
    </div>
</main>

@model StoreReport.Models.StoresByRoute

@{
    ViewData["Title"] = "Rutas por supermercado";
}
<br />
<br />
<br />
<br />
<h1>Crear Comercio por Ruta</h1>

<script type="text/javascript">

    function Chk_CheckAllClick(sender) {

        var chkBox1 = document.getElementById('chLunes');
        var chkBox2 = document.getElementById('chMartes');
        var chkBox3 = document.getElementById('chMiercoles');
        var chkBox4 = document.getElementById('chJueves');
        var chkBox5 = document.getElementById('chViernes');
        var chkBox6 = document.getElementById('chSabado');
        var chkBox7 = document.getElementById('chDomingo');

        var chkBox8 = document.getElementById('ChkAll');
        Checked = chkBox8.checked;
        if (Checked == true) {

            chkBox1.checked = true;
            chkBox2.checked = true;
            chkBox3.checked = true;
            chkBox4.checked = true;
            chkBox5.checked = true;
            chkBox6.checked = true;
            chkBox7.checked = true;
        } else {


            chkBox1.checked = false;
            chkBox2.checked = false;
            chkBox3.checked = false;
            chkBox4.checked = false;
            chkBox5.checked = false;
            chkBox6.checked = false;
            chkBox7.checked = false;
        }
        Chk_AdminClick(sender);

    }

    function Chk_AdminClick(sender) {

        var txt = "";
        var Checked = false;
        var chkBox1 = document.getElementById('chLunes');
        var chkBox2 = document.getElementById('chMartes');
        var chkBox3 = document.getElementById('chMiercoles');
        var chkBox4 = document.getElementById('chJueves');
        var chkBox5 = document.getElementById('chViernes');
        var chkBox6 = document.getElementById('chSabado');
        var chkBox7 = document.getElementById('chDomingo');


        Checked = chkBox1.checked;
        if (Checked == true) {
            txt = txt + "Lunes";
        }

        Checked = chkBox2.checked;
        if (Checked == true) {
            txt = txt + ",Martes";
        }

        Checked = chkBox3.checked;
        if (Checked == true) {
            txt = txt + ",Miércoles";
        }

        Checked = chkBox4.checked;
        if (Checked == true) {
            txt = txt + ",Jueves";
        }

        Checked = chkBox5.checked;
        if (Checked == true) {
            txt = txt + ",Viernes";
        }

        Checked = chkBox6.checked;
        if (Checked == true) {
            txt = txt + ",Sábado";
        }

        Checked = chkBox7.checked;
        if (Checked == true) {
            txt = txt + ",Domingo";
        }


        document.getElementById('DaysOfWeek').value = txt;


    }
</script>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="control-label" for="inputGroupSelect01">Ruta</label>

                </div>

                @{
                    SelectList routeList = new SelectList(new List<SelectListItem>());
                    routeList = ViewBag.Routelist;

                }

                @Html.DropDownList("RouteID", routeList)


            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="control-label" for="inputGroupSelect01">Supermercado</label>

                </div>

                @{
                    SelectList list = new SelectList(new List<SelectListItem>());
                    list = ViewBag.Storelist;

                }

                @Html.DropDownList("StoreID", list)




            </div>
            <hr />
            <p>
                <label class="control-label">Días de visita</label>
            </p>
            <div class="divTableCell">
                <p>
                    <input type="checkbox" runat="server" name="ChkAll" value="Lunes" id="ChkAll" onclick="Chk_CheckAllClick(this)" />
                    <label class="control-label">Seleccionar todos</label>
                </p>
            </div>
            <div class="divTable">
                <div class="divTableBody">
                    <div class="divTableRow">
                        <div class="divTableCell">
                            <p>
                                <input type="checkbox" runat="server" name="ChkLunes" value="Lunes" id="chLunes" onclick="Chk_AdminClick(this)" />
                                <label class="control-label">Lunes</label>
                            </p>
                        </div>
                        <div class="divTableCell">
                            <p>
                                <input type="checkbox" runat="server" name="ChkMartes" value="Martes" id="chMartes" onclick="Chk_AdminClick(this)" />
                                <label class="control-label">Martes</label>
                            </p>
                        </div>
                        <div class="divTableCell">
                            <p>
                                <input type="checkbox" runat="server" name="ChkMiercoles" value="Miercoles" id="chMiercoles" onclick="Chk_AdminClick(this)" />
                                <label class="control-label">Miércoles</label>
                            </p>
                        </div>
                        <div class="divTableCell">
                            <p>
                                <input type="checkbox" runat="server" name="ChkJueves" value="Jueves" id="chJueves" onclick="Chk_AdminClick(this)" />
                                <label class="control-label">Jueves</label>
                            </p>
                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell">
                            <p>
                                <input type="checkbox" runat="server" name="ChkViernes" value="Viernes" id="chViernes" onclick="Chk_AdminClick(this)" />
                                <label class="control-label">Viernes</label>
                            </p>
                        </div>
                        <div class="divTableCell">
                            <p>
                                <input type="checkbox" runat="server" name="ChkSabado" value="Sabado" id="chSabado" onclick="Chk_AdminClick(this)" />
                                <label class="control-label">Sábado</label>
                            </p>
                        </div>
                        <div class="divTableCell">
                            <p>
                                <input type="checkbox" runat="server" name="ChkDomingo" value="Domingo" id="chDomingo" onclick="Chk_AdminClick(this)" />
                                <label class="control-label">Domingo</label>
                            </p>
                        </div>
                        <div class="divTableCell">&nbsp;</div>
                    </div>
                </div>
            </div>

            <hr />

            <div class="form-group" hidden>
                <label asp-for="DaysOfWeek" class="control-label"></label>
                <input asp-for="DaysOfWeek" id="DaysOfWeek" class="form-control" />
                <span asp-validation-for="DaysOfWeek" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Agregar Comercio por Ruta" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

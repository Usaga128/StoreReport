@model StoreReport.Models.StoresByRoute

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>StoresByRoute</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          


            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="control-label" for="inputGroupSelect01">Supermercado</label>

                </div>

                @{
                    SelectList list = new SelectList(new List<SelectListItem>());
                    list = ViewBag.Storelist;

                }

                @Html.DropDownList("StoreID", list)



            </div>


            <div class="form-group">
                <label asp-for="StoreName" class="control-label"></label>
                <input asp-for="StoreName" class="form-control" />
                <span asp-validation-for="StoreName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RouteID" class="control-label"></label>
                <input asp-for="RouteID" class="form-control" />
                <span asp-validation-for="RouteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RouteName" class="control-label"></label>
                <input asp-for="RouteName" class="form-control" />
                <span asp-validation-for="RouteName" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="Order" class="control-label"></label>
                <input asp-for="Order" type="number" step="1" value="1" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DaysOfWeek" class="control-label"></label>
                <input asp-for="DaysOfWeek" class="form-control" />
                <span asp-validation-for="DaysOfWeek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

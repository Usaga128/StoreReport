@model StoreReport.Models.Checks

@{
    ViewData["Title"] = "Eliminar pregunta";
}

<h2>Eliminar pregunta</h2>

<h3>Esta seguro que desea eliminar la pregunta?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Pregunta
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Question)
        </dd>
       
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ChecksID" />
        <input type="submit" value="Eliminar" class="btn btn-success" /> |
        <a asp-action="Index">Retornar a la lista</a>
    </form>
</div>
